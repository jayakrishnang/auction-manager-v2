<div class="panel-header panel-header-sm">
</div>
<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title"> Auctions </h4>
          <% if current_user.admin? %>
            <div class="pull-right">
              <%= link_to 'New Auction', new_auction_path, class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table">
              <thead class=" text-primary">
                <th>
                  Name
                </th>
                <th>
                  Actions
                </th>
              </thead>
              <tbody>
                <% @auctions.each do |auction| %>
                  <tr>
                    <td><%= auction.title %></td>
                    <td><%= link_to 'Open', auction, class: 'btn btn-primary' %>
                        <% if current_user.admin? %>
                          <%= link_to 'Edit', edit_auction_path(auction), class: 'btn btn-primary' %>
                          <%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
                        <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
